   "outputs": [],
   "source": [
    "# constructing the lda model\n",
    "\n",
    "selected_topics = 7\n",
    "\n",
    "lda_model = gensim.models.LdaModel(corpus=corpus, id2word=dct, num_topics=selected_topics, \n",
    "                                           random_state=100, chunksize=128, passes=10 )"
